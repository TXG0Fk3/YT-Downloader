<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="YT_Downloader.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:YT_Downloader.Helpers.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:YT_Downloader.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:YT_Downloader.Models"
    xmlns:selectors="using:YT_Downloader.Helpers.UI.Selectors"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Views/Resources/DownloadCardTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid RowDefinitions="32, *, 80">
        <!--  Header  -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, Auto">
            <BitmapIcon
                Grid.Column="0"
                Width="20"
                Margin="14,0,0,0"
                VerticalAlignment="Center"
                ShowAsMonochrome="False"
                UriSource="/Assets/Square44x44Logo.altform-lightunplated_targetsize-24.png" />
            <TextBlock
                Grid.Column="1"
                Margin="12,0,0,2"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="YT Downloader" />
        </Grid>

        <!--  Downloads  -->
        <Grid Grid.Row="1" RowDefinitions="Auto, *">
            <!--  Title  -->
            <TextBlock
                Grid.Row="0"
                Margin="27,12,0,12"
                FontSize="16"
                Style="{StaticResource BodyStrongTextBlockStyle}"
                Text="Downloads" />

            <ScrollViewer Grid.Row="1">
                <Grid Margin="12,0,12,0">
                    <!--  If don't have downloads  -->
                    <Grid
                        VerticalAlignment="Top"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        RowDefinitions="Auto, Auto"
                        RowSpacing="8"
                        Visibility="{Binding IsDownloadItemsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock
                            Grid.Row="0"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            Text="You Will See Your Download History Here" />
                        <Button
                            Grid.Row="1"
                            Height="35"
                            Margin="0,0,0,12"
                            HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE948;" />
                                <TextBlock Text="New Download" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!--  Downloads List  -->
                    <ItemsControl ItemTemplateSelector="{StaticResource DownloadCardSelector}" ItemsSource="{Binding Downloads}">
                        <ItemsControl.ItemContainerTransitions>
                            <EntranceThemeTransition FromVerticalOffset="50" />
                            <RepositionThemeTransition IsStaggeringEnabled="False" />
                        </ItemsControl.ItemContainerTransitions>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!--  Footer  -->
        <Grid
            Grid.Row="2"
            Width="380"
            Margin="0,0,0,12"
            Padding="10"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            ColumnDefinitions="41, *, 20, 41, 41"
            CornerRadius="8">
            <Button
                Grid.Column="0"
                Width="37"
                Height="37"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding AddDownloadCommand}"
                Content="{ui:FontIcon Glyph=&#xE948;}"
                ToolTipService.ToolTip="Add New Download" />

            <AppBarSeparator Grid.Column="2" HorizontalAlignment="Center" />

            <Button
                Grid.Column="3"
                Width="37"
                Height="37"
                Padding="0"
                HorizontalAlignment="Center"
                Content="{ui:FontIcon Glyph=&#xE897;}"
                ToolTipService.ToolTip="Help" />

            <Button
                Grid.Column="4"
                Width="37"
                Height="37"
                Padding="0"
                HorizontalAlignment="Center"
                Content="{ui:FontIcon Glyph=&#xE713;}"
                ToolTipService.ToolTip="Settings" />
        </Grid>

    </Grid>
</Page>
